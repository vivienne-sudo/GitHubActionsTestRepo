@model IEnumerable<CA2V6CP.Models.Golfer>

    @{
        ViewData["Title"] = "Index";
    }

    <h1>Golfer Managment System: </h1>
<link href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css" rel="stylesheet">

    
@using (Html.BeginForm("Index", "Golfers", FormMethod.Get))
{
    <div class="form-group">
        <label>Sort By:</label>
        <select name="sort">
            <option value="nameAsc">Name (A-Z)</option>
            <option value="nameDesc">Name (Z-A)</option>
            <option value="handicapAsc">Handicap (Low-High)</option>
            <option value="handicapDesc">Handicap (High-Low)</option>
        </select>
        <button type="submit">Sort</button>
    </div>
}
<form asp-action="Index" method="get">
    <div class="form-group row">
        <label for="gender" class="col-sm-2 col-form-label">Gender:</label>
        <div class="col-sm-10">
            <select class="form-control" id="gender" name="gender">
                <option value="">All</option>
                <option value="M">Male</option>
                <option value="F">Female</option>
            </select>
        </div>
    </div>

    <div class="form-group row">
        <label for="handicapMin" class="col-sm-2 col-form-label">Handicap (Min):</label>
        <div class="col-sm-10">
            <input type="number" class="form-control" id="handicapMin" name="handicapMin" />
        </div>
    </div>
    <div class="form-group row">
        <label for="handicapMax" class="col-sm-2 col-form-label">Handicap (Max):</label>
        <div class="col-sm-10">
            <input type="number" class="form-control" id="handicapMax" name="handicapMax" />
        </div>
    </div>
    <button type="submit" class="btn btn-primary">Filter</button>
</form>

<div class="mt-3 d-flex justify-content-end">
    <a asp-action="Create" class="btn btn-primary">Create New Golfer</a>
</div>

    <table class="table">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Name)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Email)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Sex)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Handicap)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Email)
                    </td>
                    <td>
                @Html.DisplayFor(modelItem => item.Sex)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Handicap)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.MembershipNumber">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.MembershipNumber">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.MembershipNumber">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
