@model CA2V6CP.Models.Login

<!DOCTYPE html>
<html>
<head>
    <title>Golf Club</title>
    <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css" rel="stylesheet">
    <style type="text/css">
        body {
            background-color: #f5f5f5;
        }

        h1 {
            text-align: center;
            margin-top: 50px;
            margin-bottom: 50px;
            font-size: 36px;
        }

        .card {
            margin: 0 auto;
            max-width: 600px;
            border-radius: 10px;
            box-shadow: 0 5px 20px rgba(0, 0, 0, 0.1);
        }

        .card-header {
            background-color: #f8f9fa;
            border-bottom: none;
            text-align: center;
            font-size: 24px;
            font-weight: bold;
            padding: 30px;
            border-radius: 10px 10px 0 0;
        }

        .card-body {
            background-color: #ffffff;
            padding: 30px;
            border-radius: 0 0 10px 10px;
        }

        .btn-primary {
            background-color: #0069d9;
            border-color: #0069d9;
            font-weight: bold;
            padding: 12px 30px;
            border-radius: 5px;
            margin-bottom: 10px;
        }

            .btn-primary:hover {
                background-color: #0053ba;
                border-color: #0053ba;
            }
    </style>
</head>
<body>
    <div class="container">
        <div class="card">
            <div class="card-header">Welcome to the Golf Club Management System!</div>
            <div class="card-body">
                <p>Use the links below to manage golfers and tee time bookings.</p>

                <div class="text-center">
                    <a asp-action="Index" asp-controller="Golfers" class="btn btn-primary">Golfers</a>
                    <a asp-action="Index" asp-controller="TeetimeBookings" class="btn btn-primary">Tee Time Bookings</a>
                </div>
            </div>
        </div>
    </div>
</body>
</html>
